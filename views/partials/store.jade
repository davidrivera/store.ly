.container.store(ng-controller='storeCtrl', style="display:{{showStore()}}; padding-left:30px;")
  h1 Store

  form.navbar-form.margin-form(role="form")
    .input-append
        i.fa.fa-search
        input.form-control.span2.search-query(type='text',placeholder="search",ng-model="query",style="width:200px;")
  small Use the search box to search for products. You can also search on the type of product,  like "book",  or "movie."

  .row(ng-repeat="p in products | filter:query")
    .col-md-4(ng-repeat="product in p | filter:query")
      .row
        .col-md-4(style='position:relative; cursor:pointer;', ng-click='addToCart(product)', ng-mouseenter='show(product)', ng-mouseleave='hide(product)')
          .image
            .overlay
            .add-to-cart-btn.text-center(style='display:{{display(product)}};')
              i.fa.fa-shopping-cart.fa-4x(style=' margin-top: 5px;')
              p Add to Cart
        .col-md-8
          a(href="{{product.DetailPageURL}}") 
            h5 {{product.ItemAttributes.Title}}
          h6 {{product.ItemAttributes.Director}}
          P Bacon ipsum dolor sit amet capicola pastrami doner ball tip,  t-bone meatball andouille filet mignon pancetta corned beef short loin ribeye pig.
